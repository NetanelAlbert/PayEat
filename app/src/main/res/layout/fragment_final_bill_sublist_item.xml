<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/activity_split_bill_sublist_item_dish_name_textView"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="שם המנה"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activity_split_bill_sublist_item_dish_price_textView"
        android:layout_width="88dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="מחיר"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activity_split_bill_sublist_item_dish_notes_textView"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:text="תוספות וכו'"
        android:textSize="15sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/activity_split_bill_sublist_item_dish_name_textView"
        app:layout_constraintStart_toEndOf="@+id/activity_split_bill_sublist_item_dish_price_textView"
        app:layout_constraintTop_toBottomOf="@+id/split_bill_list_item_switch" />

</androidx.constraintlayout.widget.ConstraintLayout>