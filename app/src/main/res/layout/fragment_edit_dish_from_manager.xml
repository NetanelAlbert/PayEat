<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:text="שם המנה:"
            android:textSize="36sp" />

        <EditText
            android:id="@+id/editText_update_dish_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:editable="false"
            android:inputType="textPersonName"
            android:gravity="right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="עדכן מחיר:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText_update_dish_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:gravity="right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:text="עדכן פרטי המנה:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText_update_dish_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:gravity="right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="עדכן תמונה:"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/ImageView_update_dish_image"
            android:layout_width="196dp"
            android:layout_height="147dp"
            android:layout_marginTop="48dp"
            app:srcCompat="@drawable/hlomi" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/button_update_dish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="עדכן"
                android:background="@color/colorButton"
                android:textColor="@color/colorTextOnButton" />

            <Space
                android:layout_width="20dp"
                android:layout_height="10dp" />

            <Button
                android:id="@+id/button_cancel_update_dish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="בטל"
                android:background="@color/colorButton"
                android:textColor="@color/colorTextOnButton" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>