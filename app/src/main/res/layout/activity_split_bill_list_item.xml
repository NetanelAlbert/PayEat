<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ToggleButton
        android:id="@+id/split_bill_list_item_toggle"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:textOff="לא שלי"
        android:textOn="אה כן"
        android:background="@drawable/split_bill_toggle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragment_final_bill_sublist_item_dish_name_textView"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:gravity="center"
        android:text="שם המנה"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/split_bill_list_item_toggle"
        app:layout_constraintStart_toEndOf="@+id/fragment_final_bill_sublist_item_dish_price_textView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragment_final_bill_sublist_item_dish_price_textView"
        android:layout_width="85dp"
        android:layout_height="54dp"
        android:text="מחיר"
        android:textSize="30sp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragment_final_bill_sublist_item_dish_adds_textView"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginLeft="5dp"
        android:text="תוספות וכו'"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/split_bill_list_item_toggle"
        tools:layout_editor_absoluteX="339dp" />
</androidx.constraintlayout.widget.ConstraintLayout>