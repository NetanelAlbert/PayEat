<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/dish_name_text"
        android:layout_width="100dp"
        android:layout_height="39dp"
        android:layout_marginTop="4dp"
        android:text="שם המנה"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/dish_detailes_text"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dish_detailes_text"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="פרטי המנה"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dish_name_text"

        app:layout_constraintStart_toEndOf="@+id/expand_dish_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.517" />

    <Button
        android:id="@+id/expand_dish_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:background="#079F9F"
        android:text="לצפיה במנה"
        android:textColor="#000000"
        android:textSize="10dp"
        app:layout_constraintStart_toEndOf="@+id/order_dish_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/order_dish_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="הזמן"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#69DAF4"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>